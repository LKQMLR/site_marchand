<%- include('header-html') %>

<h2>Compte Utilisateur</h2>
<section class="section_infos_user">
    <p>Nom: <span class="infos_user"><%= user.lastname %></span></p>
    <p>Prenom: <span class="infos_user"><%= user.name %></span></p>
    <p>Email: <span class="infos_user"><%= user.email %></span></p>
</section>

<button class="update_button">modifier informations</button>

<form action="/my-account/check-password/<%= userID %>" method="post">
    <div class="check_password_container" id="check-password-container">
        <p>confirmer votre mot de passe</p>
        <input type="password" id="password" name="password">
        <button type="submit">confirmer</button>
    </div>
</form>
<% if(locals.errorMessage) { %>
    <%= errorMessage %>
<%}%>

<form action="/my-account/delete-user/<%= userID %>" method="post">
    <button type="submit" class="delete_button">supprimer le compte</button>
</form>


<script>

const updateBtn = document.querySelector('.update_button');
const checkPassword = document.getElementById('check-password-container');

updateBtn.addEventListener('click', () => {
    checkPassword.classList.remove('check_password_container');
})
    
</script>
<%- include('footer-html') %>
